<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="michaelpalmer.midterm.MainActivity">

    <TableRow
        android:gravity="center">

        <TextView
            android:id="@+id/cellA1"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellA2"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellA3"
            style="@style/Cell" />

    </TableRow>

    <TableRow
        android:gravity="center">

        <TextView
            android:id="@+id/cellB1"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellB2"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellB3"
            style="@style/Cell" />

    </TableRow>

    <TableRow
        android:gravity="center">

        <TextView
            android:id="@+id/cellC1"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellC2"
            style="@style/Cell" />
        <TextView
            android:id="@+id/cellC3"
            style="@style/Cell" />

    </TableRow>

    <TableRow
        android:gravity="center">

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="New Game"/>

    </TableRow>


</TableLayout>
