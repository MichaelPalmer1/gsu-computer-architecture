<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_host"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.025"
            android:id="@+id/host_state"
            android:background="@color/colorActive" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.775"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Host name"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"/>

            <TextView
                android:id="@+id/host_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Host description"
                android:textAppearance="?attr/textAppearanceListItem"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/host_container_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:hint="@string/one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/action_containers"
                android:textSize="@dimen/label_text_small"
                android:textAllCaps="true" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
