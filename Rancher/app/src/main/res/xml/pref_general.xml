<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:inputType="textUri"
        android:key="rancher_url"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Rancher URL"/>

    <EditTextPreference
        android:inputType="text"
        android:key="rancher_access_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Rancher Access Key"/>

    <EditTextPreference
        android:inputType="textPassword"
        android:key="rancher_secret_key"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Rancher Secret Key"/>

</PreferenceScreen>
